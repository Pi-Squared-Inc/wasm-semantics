#!/bin/bash
set -eu
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
parser=$(basename $0) # use parser binary with same name as this script with first letter stripped
parser=${parser:1}
[ $# -ne 1 ] && { echo "usage: $parser <input-file>"; exit 1; }
file=$1
"$SCRIPT_DIR/../build/wasm/$parser" /dev/stdin < "$(cat "$file")"
